pipeline {
  agent any

  environment {
    // aws serets
    AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
    AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
  }
  stages {
    stage('checkout') {
      steps {
        script {
          dir("terraform"){
            git 'https://github.com/manjugraju/Terraform_practice'
          }
        }
    
      }
    }
    stage('Terraform init') {
      steps {
        sh 'pwd; cd terraform/ ; terraform init -auto-approve'
        sh 'pwd; cd terraform/ ; terraform plan -auto-approve'
        sh 'pwd; cd terraform/ ; terraform  apply -auto-approve'
      }
    }
  }
}